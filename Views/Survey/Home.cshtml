@using Dojo_Surey_With_Validations.Models
@model Survey
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Document</title>
</head>

<body>
    <form asp-action="Result" asp-controller="Survey" method="post">
        <div class="name">
            <label asp-for="Name">Your Name</label>
            <input type="text" asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="loc">
            <label asp-for="Location">Dojo Location</label>
            <select asp-for="Location">
                <option selected hidden disabled></option>
                <option value="San Jose">San Jose</option>
                <option value="Boston">Boston</option>
            </select>
            <span asp-validation-for="Location"></span>
        </div>
        <div class="lang">
            <label asp-for="Language">Favorite Langauge</label>
            <select asp-for="Language">
                <option selected hidden disabled></option>
                <option value="C#">C#</option>
                <option value="JavaScript">JavaScript</option>
            </select>
            <span asp-validation-for="Language"></span>
        </div>
        <div class="com">
            <label asp-for="Comment">Comment (optional):</label>
            <textarea asp-for="Comment" cols="30" rows="10" style="resize: none;"></textarea>
            <span asp-validation-for="Comment"></span>
        </div>
        <button type="submit" style="align-self: flex-end; padding: 0.25rem;">Submit</button>
    </form>
</body>

</html>